<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    <!-- Homepage -->
    <url>
        <loc>http://localhost:3000/</loc>
        <lastmod><%= new Date().toISOString() %></lastmod>
        <changefreq>daily</changefreq>
        <priority>1.0</priority>
    </url>
    
    <!-- Main pages -->
    <url>
        <loc>http://localhost:3000/aktualnosci</loc>
        <lastmod><%= new Date().toISOString() %></lastmod>
        <changefreq>daily</changefreq>
        <priority>0.9</priority>
    </url>
    
    <url>
        <loc>http://localhost:3000/adresy-telefony-kontaktowe</loc>
        <lastmod><%= new Date().toISOString() %></lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.8</priority>
    </url>
    
    <url>
        <loc>http://localhost:3000/archiwum</loc>
        <lastmod><%= new Date().toISOString() %></lastmod>
        <changefreq>weekly</changefreq>
        <priority>0.7</priority>
    </url>
    
    <url>
        <loc>http://localhost:3000/deklaracja-dostepnosci</loc>
        <lastmod><%= new Date().toISOString() %></lastmod>
        <changefreq>yearly</changefreq>
        <priority>0.6</priority>
    </url>
    
    <!-- Dynamic pages -->
    <% if (pages && pages.length > 0) { %>
        <% pages.forEach(function(page) { %>
    <url>
        <loc>http://localhost:3000/<%= page.slug %></loc>
        <lastmod><%= new Date(page.updatedAt).toISOString() %></lastmod>
        <changefreq>weekly</changefreq>
        <priority>0.7</priority>
    </url>
        <% }); %>
    <% } %>
    
    <!-- News articles -->
    <% if (news && news.length > 0) { %>
        <% news.forEach(function(newsItem) { %>
    <url>
        <loc>http://localhost:3000/aktualnosci/<%= newsItem.slug %></loc>
        <lastmod><%= new Date(newsItem.updatedAt).toISOString() %></lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.6</priority>
    </url>
        <% }); %>
    <% } %>
</urlset>
