<div class="error-page">
    <div class="error-content">
        <h1 class="error-title"><%= title %></h1>
        <p class="error-message"><%= message %></p>
        
        <div class="error-actions">
            <a href="/" class="btn btn-primary">Strona główna</a>
            <a href="javascript:history.back()" class="btn btn-secondary">Powrót</a>
        </div>
        
        <% if (typeof error !== 'undefined' && error.stack && process.env.NODE_ENV === 'development') { %>
        <details class="error-details">
            <summary>Szczegóły błędu (tryb deweloperski)</summary>
            <pre class="error-stack"><%= error.stack %></pre>
        </details>
        <% } %>
    </div>
</div>
